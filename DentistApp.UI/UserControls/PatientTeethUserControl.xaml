            <ContentControl Style="{StaticResource MouseOverContentControlStyle}" MouseDown="toothGotFocus" ToolTip="27" Grid.Column="11" Grid.Row="1" Margin="0,0,3,0" />
            <ContentControl Style="{StaticResource MouseOverContentControlStyle}" MouseDown="toothGotFocus" ToolTip="28" Grid.Column="12" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,31,0" />
            <ContentControl Style="{StaticResource MouseOverContentControlStyle}" MouseDown="toothGotFocus" ToolTip="29" Grid.Column="13" Grid.Row="1" Margin="4,0,48,0" Grid.ColumnSpan="2" />
            <ContentControl Style="{StaticResource MouseOverContentControlStyle}" MouseDown="toothGotFocus" ToolTip="30" Grid.Column="14" Grid.Row="1" Margin="10,0,47,0" Grid.ColumnSpan="2" />
            <ContentControl Style="{StaticResource MouseOverContentControlStyle}" MouseDown="toothGotFocus" ToolTip="31" Grid.Column="15" Grid.Row="1" Margin="9,0,47,0" Grid.ColumnSpan="2" />
            <ContentControl Style="{StaticResource MouseOverContentControlStyle}" MouseDown="toothGotFocus" ToolTip="32" Grid.Column="16" Grid.Row="1" Margin="9,0,23,0" Grid.ColumnSpan="2" />
</Grid>
        
        <WrapPanel Orientation="Vertical">
           
                <Expander Header="Notes" HorizontalAlignment="Stretch" Width="1020">
                <DockPanel LastChildFill="True">
                    <Button DockPanel.Dock="Top" Command="{Binding Path=AddNote}" Width="137">Add Note</Button>
                    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Visible">
                        <ItemsControl ItemsSource="{Binding Notes}" HorizontalAlignment="Left" Margin="0,8,0,0" VerticalAlignment="Top" ItemTemplate="{StaticResource NoteItemTemplate}" ItemsPanel="{StaticResource NoteItemsPanelTemplate}" />
                    </ScrollViewer>
                </DockPanel>
            </Expander>
           
            <Expander Header="Appointments" HorizontalAlignment="Stretch">
                    <DockPanel LastChildFill="True">
                            <Button Command="{Binding Path=CreateAppointment}" DockPanel.Dock="Top" Width="186">Add Appointment</Button>
                    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Visible">
                        <ItemsControl ItemsSource="{Binding Appointments}" HorizontalAlignment="Left" VerticalAlignment="Top"
                          ItemTemplate="{StaticResource AppointmentItemTemplate}"                 
                          ItemsPanel="{StaticResource AppointmentItemsPanelTemplate}"/>
                    </ScrollViewer>
                </DockPanel>
            </Expander>
                
               
                <Expander Header="Operations">
                <DockPanel LastChildFill="True">
                    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Visible">
                            <ItemsControl ItemsSource="{Binding Operations}" HorizontalAlignment="Left" VerticalAlignment="Top"
                              ItemTemplate="{StaticResource OperationItemTemplate}"                 
                              ItemsPanel="{StaticResource OperationItemsPanelTemplate}"/>
                    </ScrollViewer>
                </DockPanel>
                </Expander>
        </WrapPanel>



    </StackPanel>
</UserControl>
