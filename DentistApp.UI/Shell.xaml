<Window x:Class="DentistApp.UI.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState = "Maximized"
        xmlns:appointment="clr-namespace:DentistApp.UI.UserControls" 
        xmlns:prism="http://www.codeplex.com/prism" 
    xmlns:main="clr-namespace:DentistApp.UI">
   
    <DockPanel LastChildFill="True" >
       
        <ContentControl DockPanel.Dock="Top" prism:RegionManager.RegionName="Menu"></ContentControl>
        <ContentControl x:Name="ContentGrid" prism:RegionManager.RegionName="MainFrame"></ContentControl>
       
    </DockPanel>
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.png"  Stretch="UniformToFill"/>
    </Window.Background>
</Window>
